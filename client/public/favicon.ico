      <path d="M0.8,0 L2,4 L1,3 L0.8,0 Z" fill="#1E3A8A"/>
    </g>
  </g>
  
  <!-- G8 text (small) -->
  <text x="16" y="26" font-family="Arial, sans-serif" font-size="8" font-weight="bold" fill="#1E3A8A" text-anchor="middle">G8</text>
